{
  "name": "bitcoinjs-lib",
  "version": "1.3.1",
  "description": "Client-side Bitcoin JavaScript library",
  "main": "./src/index.js",
  "keywords": [
    "bitcoin",
    "browser",
    "client",
    "library"
  ],
  "contributors": [
    {
      "name": "Daniel Cousens",
      "email": "bitcoin@dcousens.com",
      "url": "http://dcousens.com"
    },
    {
      "name": "Kyle Drake",
